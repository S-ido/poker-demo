<resources>
    <!-- Base application theme. -->
    <style name="Theme.PokerDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Background. -->
        <item name="android:windowBackground">@drawable/background</item>
        <!-- Action bar -->
        <item name="actionBarTheme">@style/ActionBar</item>
        <!-- Text view -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="ActionBar" parent="">
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ActionBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/saira_condensed_extra_light</item>
    </style>
</resources>